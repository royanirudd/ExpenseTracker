@{
ViewData["Title"] = "Create/Edit";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit an Expense</h1>
</div>

<form asp-controller="Home" asp-action="CreateEditExpenseForm">

    <label>Id</label>
    <input class=" form-control mt-4" type="number" placeholder="0" asp-for="Id" />
    <label>Value $</label>
    <input class="form-control mt-4" type="number" placeholder="0" asp-for="Value" step="0.01" />
    <label>Description</label>
    <input class="form-control mt-4" type="text" placeholder="Add a description" asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>
